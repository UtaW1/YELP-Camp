<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px">
    <script>
        const mapToken = '<%-process.env.MAPBOX_KEY%>';
        const campgrounds = {features: <%- JSON.stringify(allCampgrounds) %>}
    </script>
    <script src="../../javascripts/clusterMap.js"></script>   
</div>
    <h1>All Campgrounds</h1>

        <% for (campground of allCampgrounds) {%>
           <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(campground.image.length) {%>
                        <img crossorigin="anonymous" class="img-fluid img-thumbnail" src="<%=campground.image[0].url %>" alt="">
                    <% } else {%>
                        <img crossorigin="anonymous" class="img-fluid img-thumbnail" src="https://res.cloudinary.com/dvsz9pudp/image/upload/v1700558233/YelpCamp/vbz3k76mzoohmsambl3h.png" alt="">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"> <%= campground.title %></h5>
                        <p class="card-text"> <%= campground.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"> <%= campground.location %> </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
           </div>
        <% } %>

    
